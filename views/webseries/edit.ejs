<%- include("../partials/header") %>

<div class="container">
    <div class="row">

        <h1 style="text-align: center;"> Edit the entry for <%= webseries.name %> </h1>
        <div style="width:30%; margin: 25px auto">
            <form action="/webseries/<%= webseries._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="webseries[name]" value="<%= webseries.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="webseries[image]" value="<%= webseries.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="webseries[description]" value="<%= webseries.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block"> Submit! </button>
                </div>
            </form>
                
           <a href="/webseries"> Go Back </a>
        </div>


    </div>
</div>

<%- include("../partials/footer") %>